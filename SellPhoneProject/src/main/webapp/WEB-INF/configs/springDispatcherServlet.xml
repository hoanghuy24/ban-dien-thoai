<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd">
    <mvc:annotation-driven/>
    <mvc:resources location="/resources/" mapping="/resources/**"/>
    <context:component-scan base-package="com.sell"/>
    <context:annotation-config/>
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/view/"/>
        <property name="suffix" value=".jsp"/>
    </bean>
    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <mvc:exclude-mapping path="/login"/>
            <bean class="com.sell.interceptor.CustomInterceptorAdmin"/>
        </mvc:interceptor>
         <mvc:interceptor>
        	<mvc:mapping path="/cart"/>
        	<mvc:mapping path="/pay"/>
        	<mvc:mapping path="/admin/user"/>
        	<bean class="com.sell.interceptor.Login"></bean>
        </mvc:interceptor> 
        <mvc:interceptor>
        	<mvc:mapping path="admin/*"></mvc:mapping>
        	<bean class="com.sell.interceptor.RoleAdmin"></bean>
        </mvc:interceptor>
    </mvc:interceptors>
</beans>
